{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"env": [
				"DATABASE_URL",
				"AUTH0_BASE_URL",
				"NEXT_PUBLIC_MAPBOX_TOKEN",
				"BLOB_READ_WRITE_TOKEN"
			],
			"inputs": [
				".env"
			],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**"
			]
		},
		"clean": {},
		"deploy": {
			"dependsOn": [
				"build",
				"test",
				"lint"
			]
		},
		"test": {
			"dependsOn": [
				"build"
			],
			"inputs": [
				"src/**/*.tsx",
				"src/**/*.ts",
				"test/**/*.ts",
				"test/**/*.tsx"
			]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
